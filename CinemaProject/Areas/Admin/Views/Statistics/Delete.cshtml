@model CinemaProject.Models.Actor
@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6 text-danger">Delete Actor</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">

            <div class="alert alert-danger">
                Are you sure you want to delete this actor? This action cannot be undone!
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Name:</label>
                <p>@Model.Name</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Age:</label>
                <p>@Model.Age</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Skills:</label>
                <p>@(Model.Skills != null ? string.Join(", ", Model.Skills) : "No skills")</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Image:</label><br>
                <img src="~/images/actor_images/@Model.Img"
                     style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:10px;">
            </div>

            <form asp-area="Admin" asp-controller="Actor" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>

                <a href="/Admin/Actor/Index" class="btn btn-secondary">Cancel</a>
            </form>

        </div>
    </div>
</div>
