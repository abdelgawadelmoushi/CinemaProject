@model IEnumerable<ApplicationUser>

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Users</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            @* <a href="/Admin/Category/Create" class="btn btn-success">Create</a> *@
            <a asp-action="Create" class="btn btn-success">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>

                                <a asp-action="Lock"
                                   asp-route-id="@item.Id"
                                   class="btn btn-danger btn-Lock">
                                    Lock
                                </a>

                                <a asp-action="UnLock"
                                   asp-route-id="@item.Id"
                                   class="btn btn-success btn-UnLock ms-2">
                                    UnLock
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        // LOCK BUTTON
        const lockButtons = document.querySelectorAll(".btn-Lock");

        lockButtons.forEach(button => {
            button.addEventListener("click", function (e) {
                e.preventDefault();

                const url = this.getAttribute("href");

                Swal.fire({
                    title: "Are you sure?",
                    text: "This user will be locked!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, Lock it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Locked!",
                            text: "The user is now locked.",
                            icon: "success"
                        });

                        window.location.href = url;
                    }
                });
            });
        });

        // UNLOCK BUTTON
        const unlockButtons = document.querySelectorAll(".btn-UnLock");

        unlockButtons.forEach(button => {
            button.addEventListener("click", function (e) {
                e.preventDefault();

                const url = this.getAttribute("href");

                Swal.fire({
                    title: "Are you sure?",
                    text: "This user will be unlocked!",
                    icon: "info",
                    showCancelButton: true,
                    confirmButtonColor: "#28a745",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, UnLock!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "UnLocked!",
                            text: "The user is now unlocked.",
                            icon: "success"
                        });

                        window.location.href = url;
                    }
                });
            });
        });

    });
</script>



@section Scripts {
    <partial name="_NotificationPartial">
}
