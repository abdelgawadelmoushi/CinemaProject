@model Movie

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Edit Movie</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <!-- Main Image -->
                <div class="mb-3">
                    <label asp-for="MainImg" class="form-label">Main Image</label>
                    <input type="file" asp-for="MainImg" class="form-control" accept="image/*" onchange="previewMainImage(event)" />
                </div>
                <div class="mb-3">
                    <img id="mainPreview"
                         src="~/images/movie_images/@Model.MainImg"
                         alt="Current Image"
                         style="max-width: 200px; border:1px solid #ccc; padding:5px; border-radius:10px;" />
                </div>

                <!-- Sub Images -->
                <div class="mb-3">
                    <label class="form-label">Sub Images</label>
                    <input type="file" name="SubImgs" class="form-control" multiple />
                </div>
                <div class="mb-3">
                    @if (ViewBag.MovieSubImages != null)
                    {
                        foreach (var item in ViewBag.MovieSubImages)
                        {
                            <img src="~/images/movie_images/movie_sub_images/@item.Img"
                                 alt="Sub Image"
                                 style="max-width: 200px; border:1px solid #ccc; padding:5px; border-radius:10px; margin-right:5px;" />
                        }
                    }
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <!-- Price, Discount, Quantity -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Discount" class="form-label"></label>
                    <input asp-for="Discount" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                </div>

                <!-- Status -->
                @Html.DropDownListFor(m => m.Status,
                new List<SelectListItem>
                                {
                                new SelectListItem { Text = "Active", Value = "true", Selected = Model.Status },
                                new SelectListItem { Text = "Inactive", Value = "false", Selected = !Model.Status }
                                },
                                new { @class = "form-select" })

                <!-- Category -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select">
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.Id" selected="@(Model.CategoryId == item.Id ? "selected" : null)">@item.Name</option>
                        }
                    </select>
                </div>

                <!-- Cinema -->
                <div class="mb-3">
                    <label asp-for="CinemaId" class="form-label"></label>
                    <select asp-for="CinemaId" class="form-select">
                        @foreach (var item in ViewBag.Cinemas)
                        {
                            <option value="@item.Id" selected="@(Model.CinemaId == item.Id ? "selected" : null)">@item.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<script>
    function previewMainImage(event) {
        const input = event.target;
        const preview = document.getElementById("mainPreview");

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
