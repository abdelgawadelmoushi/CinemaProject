@model Movie

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6 text-danger">Delete Movie</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">

            <div class="alert alert-danger">
                Are you sure you want to delete this movie?
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Name:</label>
                <p>@Model.Name</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Description:</label>
                <p>@Model.Description</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Image:</label><br>
                <img src="~/images/movie_images/@Model.MainImg"
                     style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:10px;">
            </div>

            <form method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="/Admin/Movie/Index" class="btn btn-secondary">Cancel</a>
            </form>

        </div>
    </div>
</div>
