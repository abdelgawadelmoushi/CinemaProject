@model Movie

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6 text-danger">Delete Movie</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">

            <div class="alert alert-danger">
                Are you sure you want to delete this movie?
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Name:</label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Main Image:</label><br>
                    <img src="~/images/movie_images/@Model.MainImg"
                         style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:10px;">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Sub Images:</label><br>
                    @if (ViewBag.MovieSubImages != null)
                    {
                        foreach (var item in ViewBag.MovieSubImages)
                        {
                            <img src="~/images/movie_images/movie_sub_images/@item.Img"
                                 style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:10px; margin-right:5px;" />
                        }
                    }
                </div>

                <button type="submit" class="btn btn-danger">Delete Movie</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
