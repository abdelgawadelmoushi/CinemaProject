@model CinemaProject.Models.Movie

<!doctype html>
<html lang="en">
<head>

    <title>Add Movie</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            max-width: 700px;
            margin: auto;
        }

        label {
            display: block;
            margin-top: 12px;
            font-weight: 600;
        }

        input, textarea {
            width: 100%;
            padding: 8px;
            margin-top: 6px;
            box-sizing: border-box;
        }

        .btn {
            margin-top: 14px;
            padding: 10px 16px;
            border: 0;
            background: #0b76d1;
            color: #fff;
            cursor: pointer;
            border-radius: 6px;
        }

            .btn:disabled {
                background: #9bbcd9;
                cursor: not-allowed;
            }
    </style>
</head>
<body>

    <h2>Add Movie</h2>

    <form asp-action="Addmovies" asp-controller="Home" method="post">

        <label asp-for="Name">Movie Name</label>
        <input asp-for="Name" type="text" maxlength="200" required />

        <label asp-for="Name">Movie Description</label>
        <textarea asp-for="Name" rows="5" maxlength="2000" required></textarea>



        <button type="submit" class="btn">Save</button>
    </form>

   

</body>
</html>


