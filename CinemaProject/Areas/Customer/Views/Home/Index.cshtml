@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Movie>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<main>
    <div class="container-fluid bg-trasparent my-4 p-3"
         style="position: relative">
        <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
        @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="~/Images/@item.MainImg"
                             class="card-img-top"
                             alt="..." />
                        <div class="card-body">
                            <div class="clearfix mb-3">
                                <span class="float-start badge rounded-pill bg-primary">@item.Name</span>
                                <span class="float-end price-hp">@item.Price.ToString("c")</span>
                            </div>
                            <h5 class="card-title">
                                Lorem, ipsum dolor sit amet consectetur adipisicing elit. Veniam
                                quidem eaque ut eveniet aut quis rerum. Asperiores accusamus harum
                                ducimus velit odit ut. Saepe, iste optio laudantium sed aliquam
                                sequi.
                            </h5>
                            <div class="text-center my-4">
                                <a href="#" class="btn btn-warning">Check offer</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>

    </div>

</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>